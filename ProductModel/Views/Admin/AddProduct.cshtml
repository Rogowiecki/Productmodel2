@model Product
<form method="post">
    <div class="text-danger font-weight-bold" asp-validation-summary="All"></div>
    <div class="row">
        <div class="col-3"></div>
        <div class="col-6">
            <div class="row">
                <h3>Создание нового продукта</h3>
            </div>
            <div class="row">
                <label asp-for="Name">Название товара</label><br />
                <input type="text" placeholder="название товара" asp-for="Name" />
                <span asp-validation-for="Name"/>
            </div>
            <div class="row">
                <label asp-for="Description"></label><br />
                <input type="text" placeholder="описание товара" asp-for="Description" />
                <span asp-validation-for="Description" />
            </div>
            <div class="row">
                <label asp-for="Cost"></label><br />
                <input type="text" placeholder="стоимость" asp-for="Cost" />
                <span asp-validation-for="Cost" />
            </div>
            <div class="row">
                <button type="submit" asp-controller="Admin" asp-action="AddProduct">Добавить</button>
            </div>
        </div>
    </div>
</form>