@model Register
<form method="post">
<div class="text-danger font-weight-bold" asp-validation-summary="All"></div>
<div class="row">
    <div class="col-3"></div>
    <div class="col-6">
        <div class="row">
            <h3>Регистрация</h3>
        </div>
        <div class="row">
            <label asp-for="UserName">Пользователь</label><br />
            <input type="text" placeholder="Логин" asp-for="UserName" />
            <span asp-validation-for="UserName" />
        </div>
        <div class="row">
            <label asp-for="Password">Пароль</label><br />
            <input type="password" placeholder="Пароль" asp-for="Password" />
            <span asp-validation-for="Password" />
        </div>
            <div class="row">
                <label asp-for="ConfirmPassword">Подтвердите пароль</label><br />
                <input type="password" placeholder="Подтвердите пароль" asp-for="ConfirmPassword" />
                <span asp-validation-for="ConfirmPassword" />
            </div>
        <div class="row">
            <button type="submit" asp-controller="Login" asp-action="Register">Зарегистрироваться</button>
        </div>
    </div>
</div>
</form>